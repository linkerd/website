#! /bin/sh

set -eu

LINKERD2_VERSION=${LINKERD2_VERSION:-L5D2_LATEST_VERSION}

if [ "$(uname -s)" = "Darwin" ]; then
  OS=darwin
else
  OS=linux
fi

tmp=$(mktemp -d /tmp/linkerd2.XXXXXX)
filename="linkerd2-cli-${LINKERD2_VERSION}-${OS}"
url="https://github.com/linkerd/linkerd2/releases/download/v${LINKERD2_VERSION}/${filename}"
(
  cd "$tmp"

  echo "Downloading ${filename}..."

  SHA=$(curl -sL "${url}.sha256")
  curl -LO "${url}"
  echo ""
  echo "Download complete!"
  echo ""

  echo "Validating checksum..."
  checksum=$(openssl dgst -sha256 "${filename}" | awk '{ print $2 }')
  if [ "$checksum" != "$SHA" ]; then
    echo "Checksum validation failed." >&2
    exit 1
  fi
  echo ""
)

echo "-------------------------------------------------------"
echo ""

(
  cd "$HOME"
  mkdir -p ".linkerd2/bin"
  mv "${tmp}/${filename}" ".linkerd2/bin/linkerd"
  chmod +x ".linkerd2/bin/linkerd"
)

rm -r "$tmp"

echo "Linkerd was successfully installed ðŸŽ‰"
echo ""
echo "Add the linkerd CLI to your path with:"
echo ""
echo "    export PATH=\$PATH:\$HOME/.linkerd2/bin"
echo ""
echo "To check for potential installation problems, run:"
echo ""
echo "    linkerd check --pre"
echo ""
echo "Once that is passing, to install the Linkerd control"
echo "plane onto your cluster, run:"
echo ""
echo "    linkerd install | kubectl apply -f -"
echo ""
echo "To validate your control plane installation and wait"
echo "until all the components are ready, run:"
echo ""
echo "    linkerd check"
echo ""
echo "To view the Linkerd and Grafana dashboards, run:"
echo ""
echo "    linkerd dashboard"
echo ""
echo "For more information, visit:"
echo ""
echo "    https://linkerd.io/2/getting-started"
echo ""
echo "To see some fun things you can do with Linkerd, visit:"
echo ""
echo "    https://linkerd.io/2/next-steps"
echo ""
